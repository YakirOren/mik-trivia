<UserControl x:Class="mik_Wpf.game"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mik_Wpf"
             mc:Ignorable="d" 
             Height="70" Width="500">
    <Grid>

        <Image Margin="0,0,0,0" Source="./images/new_game.png" Stretch="Fill"/>
        <Button Name="join" Margin="10,19,419,20.4" BorderBrush="Transparent" Style="{DynamicResource join_button}">
            <Button.Background>
                <ImageBrush ImageSource="./images/join_game.png" Stretch="Fill"/>
            </Button.Background>
        </Button>

        <TextBlock Name="players_lbl" Text="ddd" FlowDirection="RightToLeft" Foreground="White" Margin="99,25,372,25.4"/>
        <TextBlock Name="driver_lbl" Text="ddddd" FlowDirection="RightToLeft" Foreground="White" Margin="317,25,135,25.4"/>
        <TextBlock Name="destination_lbl" Text="ddddd" FlowDirection="RightToLeft" Foreground="White" Margin="186,25,270,20.4"/>




    </Grid>
</UserControl>
